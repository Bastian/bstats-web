        "eslint-plugin-svelte3": "^3.2.0",
        "husky": "^4.3.8",
        "postcss": "^8.2.7",
        "postcss-load-config": "^3.0.1",
        "prettier": "^2.3.0",
        "prettier-plugin-svelte": "^2.3.0",
        "sass": "^1.0.0",
        "svelte": "^3.29.0",
        "svelte-check": "^1.3.0",
        "svelte-outside-click": "^1.1.1",
        "svelte-preprocess": "^4.6.9",
        "tailwindcss": "^2.0.3",
        "tslib": "^2.0.0",
        "typescript": "^4.0.0",
        "vite": "^2.1.0"
