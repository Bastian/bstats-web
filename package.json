{
    "name": "bstats-web",
    "description": "The bStats web frontend",
    "private": true,
    "license": "MIT",
    "version": "0.0.1",
    "scripts": {
        "dev": "svelte-kit dev --host 0.0.0.0",
        "build": "svelte-kit build",
        "preview": "svelte-kit preview",
        "check": "svelte-check --fail-on-warnings --fail-on-hints",
        "lint": "eslint --max-warnings 0 --ext .js,.ts,.svelte src",
        "lint-fix": "eslint --fix --ext .js,.ts,.svelte src",
        "prettier": "prettier --write --ignore-unknown ."
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run check && npm run prettier && npm run lint"
        }
    },
    "dependencies": {
        "chart.js": "^3.2.1",
        "chartjs-adapter-date-fns": "^2.0.0",
        "date-fns": "^2.21.3",
        "dedent": "^0.7.0",
        "firebase": "^8.3.1",
        "firebase-admin": "^9.5.0",
        "highlight.js": "^10.7.2",
        "svelte-forms-lib": "^1.10.3",
        "yup": "^0.32.9"
    },
    "devDependencies": {
        "@sveltejs/adapter-node": "next",
        "@sveltejs/kit": "^1.0.0-next.93",
        "@tailwindcss/forms": "^0.3.2",
        "@types/chart.js": "^2.9.31",
        "@types/cookie": "^0.4.0",
        "@types/dedent": "^0.7.0",
        "@types/firebase": "^3.2.1",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
